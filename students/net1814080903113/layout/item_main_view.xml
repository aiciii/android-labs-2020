<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:orientation="vertical"
    tools:context=".MainViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="@string/aquaapp"
                    android:textColor="#000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:text="@string/toppage"
                    android:textColor="#734338"
                    android:textSize="13.5sp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="293dp"
                    android:src="@drawable/aqua17" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:textStyle="italic"
                    android:text="@string/aquatw"
                    android:textColor="#005CBF"
                    android:textSize="13sp"/>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:src="@drawable/aquabackground"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:src="@drawable/aquaworddd"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="75dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jianjie"
                    android:layout_marginTop="170dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/atminatoaqua"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="130dp"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/caidanjian"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="110dp"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/bell"
                    android:layout_marginLeft="295dp"
                    android:layout_marginTop="110dp"/>

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="65dp"
                    android:src="@drawable/radiuskuang"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="95dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followkey"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginLeft="346dp"
                    android:layout_marginTop="119.5dp"/>


                <ImageView
                    android:id="@+id/aqua_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/aquaiconnn"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

<!--            背景原位置-->
                    <include layout="@layout/view_frame_title1"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_list1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF"
                        android:paddingTop="15dp"/>


                    <include layout="@layout/view_frame_title2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/brief_contro"
                            android:textColor="#000"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center" />

                            </LinearLayout>


                    </LinearLayout>


                <include layout="@layout/view_frame_title3"/>

                    <!--2d3d_1-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dd_ddd_view"
                                android:layout_width="100dp"
                                android:layout_height="200dp"
                                android:clipToPadding="false"
                                android:layout_marginLeft="5dp" />

                        <include layout="@layout/view_content1"/>

                </LinearLayout>

                    </LinearLayout>

                    <!--2d3d_2-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/dd_ddd_view2"
                                    android:layout_width="100dp"
                                    android:layout_height="200dp"
                                    android:clipToPadding="false"
                                    android:layout_marginLeft="5dp" />

                                <include layout="@layout/view_content2"/>

                            </LinearLayout>


                    </LinearLayout>

                    <!--2d_3d_3-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/dd_ddd_view3"
                                    android:layout_width="100dp"
                                    android:layout_height="200dp"
                                    android:clipToPadding="false"
                                    android:src="@drawable/aquamodel6" />

                                <include layout="@layout/view_content3"/>

                            </LinearLayout>


                    </LinearLayout>

                <!--2d_3d_4-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dd_ddd_view4"
                                android:layout_width="100dp"
                                android:layout_height="200dp"
                                android:clipToPadding="false"
                                android:layout_marginLeft="5dp" />

                            <include layout="@layout/view_content4"/>

                        </LinearLayout>


                </LinearLayout>

                <!--2d_3d_5-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/dd_ddd_view5"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:clipToPadding="false"
                            android:layout_marginLeft="5dp" />

                        <include layout="@layout/view_content5"/>

                    </LinearLayout>


                </LinearLayout>

                <include layout="@layout/view_frame_title4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_list2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFF"
                        android:paddingTop="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textStyle="normal"
                        android:text="@string/powered"
                        android:textColor="#734338"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2.5dp"
                        android:textStyle="bold"
                        android:text="@string/akukin"
                        android:textSize="16.7sp"/>

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>





</RelativeLayout>
